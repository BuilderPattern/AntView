<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <com.example.administrator.anyview.my_views.NoSlideViewPager
        android:id="@+id/main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_tabs"/>

    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/main_tabs"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:divider="#d2d2d2"
        android:showDividers="middle"
        android:layout_height="100px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_tab_1"
            android:textSize="28px"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20px"
            android:drawablePadding="5px"
            android:drawableTop="@drawable/home_tab1"
            android:background="@drawable/click_bg"
            android:text="首页"/>

        <TextView
            android:id="@+id/home_tab_2"
            android:textSize="28px"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20px"
            android:drawablePadding="5px"
            android:drawableTop="@drawable/home_tab2"
            android:background="@drawable/click_bg"
            android:text="居民"/>


        <TextView
            android:id="@+id/home_tab_3"
            android:textSize="28px"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20px"
            android:drawablePadding="5px"
            android:drawableTop="@drawable/home_tab3"
            android:background="@drawable/click_bg"
            android:text="发现"/>


        <TextView
            android:id="@+id/home_tab_4"
            android:textSize="28px"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:paddingTop="20px"
            android:drawablePadding="5px"
            android:drawableTop="@drawable/home_tab4"
            android:background="@drawable/click_bg"
            android:text="我的"/>
    </LinearLayout>


