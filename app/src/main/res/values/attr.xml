<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text" format="string"/>
    <attr name="textSize" format="dimension"/>
    <attr name="textColor" format="color"/>
    <attr name="background" format="reference"/>

    <attr name="gravity" format="enum">
        <enum name="center" value="0"/>
        <enum name="top" value="1"/>
        <enum name="bottom" value="2"/>
        <enum name="left" value="3"/>
        <enum name="right" value="4"/>
        <enum name="horizontal_center" value="5"/>
        <enum name="vertical_center" value="6"/>
    </attr>

    <declare-styleable name="MyAttrView">
        <attr name="text"/>
        <attr name="textSize"/>
        <attr name="textColor"/>
        <attr name="background"/>
        <attr name="gravity"/>
    </declare-styleable>

    <attr name="imgBackground" format="reference"/>

    <attr name="imgScaleType" format="enum">
        <enum name="fillXY" value="0"/>
        <enum name="center" value="1"/>
    </attr>


    <declare-styleable name="MyExplainImageView">
        <attr name="imgBackground"/>
        <attr name="imgScaleType"/>

        <!--<attr name="text"/>-->
        <!--<attr name="textSize"/>-->
        <!--<attr name="textColor"/>-->
    </declare-styleable>

    <attr name="loadColor" format="reference|color"/>
    <attr name="startAngle" format="integer"/>
    <declare-styleable name="MyLoadCircleView">
        <attr name="loadColor"/>
        <attr name="startAngle"/>
    </declare-styleable>

    <declare-styleable name="MyLoadingView">
        <attr name="loadColor"/>
        <attr name="startAngle"/>
        <attr name="speed" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MyClockView">
        <attr name="hourIndicatorColor" format="color|reference"/>
        <attr name="minIndicatorColor" format="color|reference"/>
        <attr name="secondIndicatorColor" format="color|reference"/>
        <attr name="circleColor" format="color|reference"/>
        <attr name="degreeColor" format="color|reference"/>
        <attr name="textTimeSize" format="dimension"/>
        <attr name="textTimeColor" format="color|reference"/>
    </declare-styleable>

</resources>